<%- include('../partials/head.ejs') %>
<%- include('../partials/nav.ejs') %>

<main>
    <form class="insurance-form" action="/insureds" method="POST">
        <% if (successMessage) { %>
            <div id="successMessage" class="alert alert-success">
                <strong>Povedlo se:</strong> <%= successMessage %>
            </div>
        <% } %>
        <div class="form-group">
            <label for="name">Jméno:</label>
            <input type="text" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email">
        </div>
        <div class="form-group">
            <label for="type">Pojištěný/Pojistník</label>
            <select name="insuredType">
                <option value="#">Vyberte z možností</option>
                <% insuredTypes.forEach(type => { %>
                    <option value="<%= type %>"><%= type === 'insured' ? 'Pojištěný' : 'Pojistník' %></option>
                <% }); %>
            </select>
        </div>

        <button type="submit" onclick="submitForm()">Vytvořit</button>
    </form>
</main>

<%- include('../partials/footer.ejs') %>